---
interface Props {
  category: string;
}

const { category } = Astro.props;
let posts = await Astro.glob("../pages/blog/post/*.md"); // Load all blog posts
switch (category) {
  case "Blog":
    posts = await Astro.glob("../pages/blog/post/*.md"); // Load all blog posts
    break;
  case "Tema":
    posts = await Astro.glob("../pages/tema/post/*.md"); // Load all project posts
    break;
  default:
    posts = [];
}

posts = posts.slice(0, 4);
---

<>
  <h2 class="text-2xl">{category}</h2>

  <div class="flex gap-2">
    {
      posts.map(post => (
        <a
          href={post.url}
          title="progreso"
          class=" w-[100%]  rounded p-4 min-h-24 bg-[#333] mb-4"
        >
          {post.frontmatter.title}
        </a>
      ))
    }
  </div>
</>
